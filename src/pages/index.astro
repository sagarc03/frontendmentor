---
import Layout from "@/layouts/Layout.astro";
interface Frontmatter {
  title: string;
}
const challenges = await Astro.glob<Frontmatter>("./challenges/*.mdx");
---

<Layout title="Welcome to Astro.">
  <main
    class="container mx-auto my-20 flex flex-col items-center justify-center"
  >
    <h1 class="my-20">Welcome to Astro</h1>
    <ul>
      {
        challenges.map(({ url, frontmatter: { title } }) => (
          <li>
            <a href={url}>{title}</a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>
